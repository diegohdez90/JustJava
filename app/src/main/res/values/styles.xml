<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JustJavaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#bdbdbd</item>
        <item name="colorPrimaryDark">#8d8d8d</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#6d4c41</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

    <style name="CustomTextTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#7e4a35</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
